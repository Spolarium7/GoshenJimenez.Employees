@model GoshenJimenez.Employees.ViewModels.Users.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}
<div class="row">
    <div class="col-md-10 col-md-offset-3">
        <div class="row">
            <div class="col-md-6">
                <div class="content-box-large">
                    <div class="panel-heading">
                        <div class="panel-title">Change Pasword</div>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("changepassword", "account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-7">
                                    @Html.ValidationSummary()
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-3 control-label">Old Password</label>
                                <div class="col-sm-9">
                                    @Html.PasswordFor(m => m.OldPassword, new { placeholder = "Old Password", @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-3 control-label">New Password</label>
                                <div class="col-sm-9">
                                    @Html.PasswordFor(m => m.Password, new { placeholder = "New Password", @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-3 control-label">Confirm New Password</label>
                                <div class="col-sm-9">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
                                </div>
                            </div>

                                <div class="form-group">
                                    <div class="col-sm-offset-3 col-sm-9">
                                        <button type="submit" class="btn btn-primary pull-right">Save</button>
                                    </div>
                                </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>